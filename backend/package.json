{
  "name": "backend",
  "version": "1.3.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "tsnd --poll --respawn --transpile-only ./src/index.ts",
    "build": "tsc",
    "lint": "echo '----- Checking Backend -----' && prettier --debug-check . && eslint --ext .ts . && echo '----- Done -----'",
    "fix": "prettier --write . && eslint --fix --ext .ts .",
    "test": "jest",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- migration:generate -n",
    "migration:create": "npm run typeorm -- migration:create -n",
    "migration:run": "npm run typeorm -- migration:run -d ./src/datasource.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d ./src/datasource.ts",
    "migration:show": "npm run typeorm -- migration:show -d ./src/datasource.ts"
  },
  "author": "Megakrash",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "argon2": "^0.40.3",
    "axios": "^1.7.2",
    "class-validator": "^0.14.1",
    "cookies": "^0.9.1",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "express": "^4.19.2",
    "graphql": "^16.9.0",
    "graphql-scalars": "^1.23.0",
    "graphql-ws": "^5.16.0",
    "graphql-yoga": "^5.6.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.14",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "tsconfig-paths": "^4.2.0",
    "type-graphql": "^2.0.0-beta.3",
    "typeorm": "^0.3.20",
    "uuid": "^10.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/cookie": "^0.6.0",
    "@types/cookies": "^0.9.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/nodemailer": "^6.4.15",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.11",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "3.3.3",
    "ts-jest": "^29.2.2",
    "ts-node-dev": "^2.0.0"
  }
}
